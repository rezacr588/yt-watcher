# YouTube Watcher Configuration

# Video Settings
VIDEO_URL=https://www.youtube.com/watch?v=R71Rh1HR7Js

# Browser Settings
NUM_BROWSERS=10
HEADLESS=false

# Watch Time Settings (percentage of video to watch)
# Higher values = more realistic (humans usually watch 95-100% of videos they're interested in)
MIN_WATCH_PERCENTAGE=0.95
MAX_WATCH_PERCENTAGE=1.0

# Timing Settings (in seconds)
# More variation = more human-like
LAUNCH_DELAY_MIN=5
LAUNCH_DELAY_MAX=30
ACTION_DELAY_MIN=2
ACTION_DELAY_MAX=8

# Proxy Settings
USE_PROXY=false
PROXY_LIST_FILE=proxies.txt
PROXY_ROTATION=random  # Options: random, round-robin, sticky

# Behavior Settings
ENABLE_MOUSE_MOVEMENT=true
ENABLE_SCROLLING=true
ENABLE_VOLUME_CHANGES=true
ENABLE_QUALITY_CHANGES=false
ENABLE_FULLSCREEN=false

# Interaction Probabilities (0.0 to 1.0)
# Higher probabilities = more interactions = more human-like
MOUSE_MOVEMENT_PROBABILITY=0.7
SCROLL_PROBABILITY=0.5
VOLUME_CHANGE_PROBABILITY=0.15
PAUSE_RESUME_PROBABILITY=0.08
SEEK_PROBABILITY=0.05

# Anti-Detection Settings
ROTATE_USER_AGENTS=true
RANDOM_LOCATIONS=true
STEALTH_MODE=true
RANDOMIZE_VIEWPORT=true

# Retry Settings
MAX_RETRIES=3
RETRY_DELAY=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=youtube_watcher.log

# Flask Security
FLASK_SECRET_KEY=change-this-to-a-random-secret-key-in-production
